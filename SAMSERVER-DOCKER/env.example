# AOC V2 Docker Environment Configuration
# This file contains environment variables for the Docker database system

# Database Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=ThaiAocV21
MONGO_INITDB_DATABASE=aoc_v2

# Redis Configuration
REDIS_PASSWORD=aocv2@123!

# Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# Port Configuration
MONGODB_PORT=27017
REDIS_PORT=6379
NGINX_PORT=8080
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Backup Configuration
BACKUP_DIR=./backup
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
PROMETHEUS_RETENTION_TIME=200h
PROMETHEUS_SCRAPE_INTERVAL=15s

# Security Configuration
ENABLE_CORS=true
CORS_ORIGIN=*

# Performance Configuration
MONGODB_CACHE_SIZE_GB=1
REDIS_MAXMEMORY=512mb
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
